procedure TForm1.ComboBox1Change(Sender: TObject);
begin
       Memo1.Clear;
       Memo1.Lines.Add('Combobox ile kullanýcýya seçmesi için seçenkerler ekleyebilirsiniz. Properties > Items kýsmýnda istenilen seçenekler eklenebilir.Ayrýca,kodla Comboboxismi.Items.Add komutu ile de eklenebilir')
end;


procedure TForm1.FormCreate(Sender: TObject);
begin
Memo1.Clear;
end;



procedure TForm1.Label1Click(Sender: TObject);
begin

      Memo1.Clear;
      Memo1.Lines.Add('Labeller etiket  olarak kullanýlýrlar. Caption özelliðinden görünmesini istediðiniz texti yazabilirsiniz. Kullanýcý için Editlere(Ýnputboxlara) giriþleri belirleyebilirler. Örneðin öðrenci adý ve vize notlarý programlarý yapýlacak ve 2 adet Edit var.');
      Memo1.Lines.Add('Hangisinin öðrenci adý hangisinin not giriþi olduðunu belirtmek için kullanýlabilirler. ');    Memo1.Lines.Add('Hangisinin öðrenci adý hangisinin not giriþi olduðunu belirtmek için kullanýlabilirler. ');
      Memo1.Lines.Add('Buttonlar ile editlere girilen verilere iþlem yaptýrýlabilir. Örneðin, girilen verilerin gönderilmesi, eklenmesi v.b. ');
      Memo1.Lines.Add(' ' );
      Memo1.Lines.Add('Yan tarafta anlatýlan örneðe ulaþabilirsiniz.' );
      Edit1.Visible :=True;
      Edit2.Visible :=True;
      Label2.Visible :=True;
      Label3.Visible :=True;
      Button1.Visible :=True;
      labeltiklandi := true;
      Label4.Visible :=true;
      Label6.Visible :=true;
      Label8.Visible :=true;
      Label9.Visible :=true;
      Combobox1.Visible:=True;
      Scrollbar1.Visible :=true;
      Listbox1.Visible:=True;
      CheckBox1.Visible := True;
      CheckBox2.Visible := True;
      CheckBox3.Visible := True;
      RadioButton1.Visible := True;
      RadioButton2.Visible := True;

    end;

procedure TForm1.ListBox1Click(Sender: TObject);
begin
  Memo1.Clear;
  Memo1.Lines.Add('ListBox nesnesinde kullanýcýya veri listeleyebilirsiniz. Items sekmesinden listelenecek verileri girebilirsiniz. Memodan farký kullanýcýlarýn yalnýzca verilen seçenekler üzerinde seçim yapabilmesidir.Ýnput giriþi yapýlmaz.');
end;

procedure TForm1.MainMenzellikleri1Click(Sender: TObject);
begin


           Memo1.Clear;
           Memo1.Lines.Add('Main Menü nesnesi üzerine çift týklayýnýz.');
           Memo1.Lines.Add('Karþýnýza gelen her bir boþluk  TMenuItem olarak adlandýrýlýr.  Bu nesnelere sað týklayarak(click) > Insert komutuna basarak yeni menüler oluþturabilirsiniz. Bu menülere Properties kýsmýndaki Caption  kýsmýndan adlandýrma yapabilirsiniz.');
           menutiklandi := true;

       end;

procedure TForm1.RadioButton1Click(Sender: TObject);
begin
  Memo1.Clear;
