procedure TForm1.ScrollBar1Change(Sender: TObject);
begin
    Memo1.Clear;
    Label5.Visible :=true;
    Memo1.Lines.Add('ScrollBar nesnesi ile kaydýrmalý olarak deðer kullanýcýya deðer girdirebilirsiniz. Properties üzerinden Max ve Min komutlarý ile üretilecek uç deðerleri belirleyebilirsiniz. ');
    label5.Caption := inttostr(Scrollbar1.Position);
end;

end.
