procedure TForm1.Button1Click(Sender: TObject);
begin

  if (edit1.Text = '' ) or (edit2.Text = '') then
  begin
    Application.MessageBox('Boþ veri býrakmayýnýz.','')
  end
  else


    Application.MessageBox('Veriler kayýt edildi.','')
end;

procedure TForm1.CheckBox1Click(Sender: TObject);
begin
     Memo1.Clear;
      Memo1.Lines.Add('CheckBox ile kullanýcý ayný anda 1 den fazla deðer seçebilir. Örneðin bir öðrencinin bütün dersleri ayný anda almasý gibi.Radiobuttondan farký budur.');
end;

